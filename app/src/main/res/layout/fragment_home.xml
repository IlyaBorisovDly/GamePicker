<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPopular"
            style="@style/Widget.GamePicker.HeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/popular" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPopular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_game_card">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/textViewOpenWorld"
            style="@style/Widget.GamePicker.HeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Открытый мир" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_game_card">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/textViewGenres"
            style="@style/Widget.GamePicker.HeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/genres" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGenres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_genre_card">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/textViewMultiplayer"
            style="@style/Widget.GamePicker.HeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Мультиплеер" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMultiplayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_game_card">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/textViewMetacriticChoice"
            style="@style/Widget.GamePicker.HeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Выбор Metacritic" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMetacriticChoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_game_card">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/textViewFromSoftwareGames"
            style="@style/Widget.GamePicker.HeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Игры от FromSoftware" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFromSoftwareGames"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_game_card">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/textViewPlaystationCollection"
            style="@style/Widget.GamePicker.HeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Коллекция Playstation" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPlaystationCollection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_game_card">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</ScrollView>