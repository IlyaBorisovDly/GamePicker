<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context=".presentation.gamedetails.GameDetailsFragment">

    <ImageView
        android:id="@+id/imageViewGameDetailsPosterShimmer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/dark_gray"
        android:contentDescription="@string/game_picture_shimmer" />

    <TextView
        style="@style/Widget.GamePicker.GameDetailsNameTextViewShimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/dark_gray"
        android:orientation="horizontal" />

    <TextView
        style="@style/Widget.GamePicker.GameDetailsTitleTextViewShimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/Widget.GamePicker.GameDetailsDescriptionTextViewShimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/Widget.GamePicker.GameDetailsTitleTextViewShimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/Widget.GamePicker.GameDetailsDescriptionTextViewShimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:background="@color/dark_gray"
        android:gravity="center"
        android:maxLength="3" />


</LinearLayout>