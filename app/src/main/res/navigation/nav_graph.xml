<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.gamepicker.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_gameDetailsFragment"
            app:destination="@id/gameDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.example.gamepicker.presentation.categories.CategoriesFragment"
        android:label="categories_fragment"
        tools:layout="@layout/fragment_categories" />
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.gamepicker.presentation.statistics.StatisticsFragment"
        android:label="statistics_fragment"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.gamepicker.presentation.search.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/gameDetailsFragment"
        android:name="com.example.gamepicker.presentation.gamedetails.GameDetailsFragment"
        android:label="fragment_game_details"
        tools:layout="@layout/fragment_game_details" >
        <action
            android:id="@+id/action_gameDetailsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="gameId"
            app:argType="integer" />
    </fragment>
</navigation>