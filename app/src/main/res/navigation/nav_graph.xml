<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/homeFragment">

    <include app:graph="@navigation/nav_graph_home" />
    <include app:graph="@navigation/nav_graph_categories" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.gamepicker.presentation.screens.parent.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.example.gamepicker.presentation.screens.parent.CategoriesFragment"
        android:label="categories_fragment"
        tools:layout="@layout/fragment_categories" />

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.gamepicker.presentation.screens.parent.StatisticsFragment"
        android:label="statistics_fragment"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.gamepicker.presentation.screens.parent.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/fragment_search" />

</navigation>